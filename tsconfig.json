{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"listFiles": true,
		"isolatedModules": false,
		"moduleResolution": "node",
		"suppressImplicitAnyIndexErrors": true,
		"declaration": true,
		"noImplicitReturns": true
	},
	"include": [
		"**/*.ts",
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.d.ts"
	],
	"compileOnSave": false
}
